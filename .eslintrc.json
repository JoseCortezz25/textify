{
  "extends": [
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    "semi": [
      2,
      "always"
    ],
    "space-before-function-paren": [
      "off",
      "never"
    ],
    "camelcase": [
      "error",
      {
        "allow": [
          "api_url",
          "other_identifier"
        ]
      }
    ],
    "no-unused-vars": "off",
    "comma-dangle": [
      "error",
      {
        "functions": "never"
      }
    ],
    "no-debugger": "off",
    "no-console": "off",
    "singleAttributePerLine": true
  },
  "ignorePatterns": [
    "node_modules/",
    "src/components/ui"
  ]
}